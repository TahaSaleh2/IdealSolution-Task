@model EmployeeVM



@Html.AntiForgeryToken()

@if (Model != null)
{
    <input asp-for="Id" type="hidden" value="@Model.Id" />
}

@Html.AntiForgeryToken()

<div class="form-group row">
    <label asp-for="FName" class="col-sm-4 control-label">First Name</label>
    <div class="col-sm-8">
        <input type="text" asp-for="FName" class="form-control">
        <span asp-validation-for="FName" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="LName" class="col-sm-4 control-label">Last Name</label>
    <div class="col-sm-8">
        <input type="text" asp-for="LName" class="form-control">
        <span asp-validation-for="LName" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Email" class="col-sm-4 control-label">Email</label>
    <div class="col-sm-8">
        <input type="email" asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="JobTitle" class="col-sm-4 control-label">Job Title</label>
    <div class="col-sm-8">
        <input type="text" asp-for="JobTitle" class="form-control">
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="BirthDay" class="col-sm-4 control-label">BirthDay</label>
    <div class="col-sm-8">
        <input type="date" asp-for="BirthDay" class="form-control">
        <span asp-validation-for="BirthDay" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Salary" class="col-sm-4 control-label">Salary</label>
    <div class="col-sm-8">
        <input type="number" asp-for="Salary" class="form-control">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
</div>
<div class="modal-footer">
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="reset" class="btn btn-default">Clear</button>
</div>