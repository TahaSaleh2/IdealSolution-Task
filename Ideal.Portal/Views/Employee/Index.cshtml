<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark text-xl">Employees</h1>
            </div>
            <div class="col-sm-6">

                <a class="btn btn-primary p-1 px-2 float-sm-right" asp-controller="Employee" asp-action="Create"
                   data-ajax="true" data-ajax-loading="#loader" data-ajax-mode="replace"
                   data-ajax-success="toggleCreateModal" data-ajax-update="#createBody">
                    Add <i class="fas fa-plus"></i>
                </a>

            </div>
        </div>
    </div>
</div>

<section class="content mb-2">

    <div class="container" id="tblResult">
        @await Component.InvokeAsync("EmployeeList")
    </div>
</section>





<div id="createModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add Employee</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="createBody">

            </div>
        </div>
    </div>
</div>

<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"> Update Employee</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="editBody">
            </div>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete Employee</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="deleteBody">
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="~/Scripts/Views/Employee/index.js"></script>
}
